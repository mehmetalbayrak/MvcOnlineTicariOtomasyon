<button class="btn btn-outline-secondary" id="btn5">Buton5 </button>



@*Önce dosyaları ekle daha sonra aşağıda script tanımla*@
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script>
    $('#btn1').click(function () {
        swal("Merhaba Dünya");
    });
</script>
<script>
    $('#btn2').click(function () {
        swal("Burası başlık", "burası yazı alanı");
    });
</script>

<script>
    $('#btn3').click(function () {
        swal("Good job!", "You clicked the button!", "success");
    });
</script>

<script>
    //2 kere sorma scripti
    $('#btn4').click(function () {
        swal("Click on either the button or outside the modal.")
            .then((value) => {
                swal(`The returned value is: ${value}`);
            });
</script>

<script>
        //Emin misiniz script
    $('#btn5').click(function () {
        swal({
            title: "Emin misiniz?",
            text: "Silmeden önce dosyanızı yedeklediğinizden emin olun!",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
                if (willDelete) {
                    swal("Dosya başarıyla silindi!", {
                        icon: "success",
                    });
                } else {
                    swal("Dosya silinme işlemi iptal edildi");
                }
            });
</script>

