@model MvcOnlineTicariOtomasyon.Models.Classes.Bill

@{
    ViewBag.Title = "AddBill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>AddBill</h2>
<form class="form-group" method="post">
    @Html.LabelFor(x => x.BillSerialNo)
    @Html.TextBoxFor(x => x.BillSerialNo, new { @class = "form-control" })
    @Html.LabelFor(x => x.BillQueueNo)
    @Html.TextBoxFor(x => x.BillQueueNo, new { @class = "form-control" })
    @Html.LabelFor(x => x.Tax)
    @Html.TextBoxFor(x => x.Tax, new { @class = "form-control" })
    @Html.LabelFor(x => x.Date)
    @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
    @Html.LabelFor(x => x.Time)
    @Html.TextBoxFor(x => x.Time, new { @class = "form-control" })
    @Html.LabelFor(x => x.Delivery)
    @Html.TextBoxFor(x => x.Delivery, new { @class = "form-control" })
    @Html.LabelFor(x => x.Receiver)
    @Html.TextBoxFor(x =>x.Receiver, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Kaydet</button>

</form>

