@using MvcOnlineTicariOtomasyon.Models.Classes

@model List<SaleSituation>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PrintProducts</title>
</head>
<body>
    <table id="tbl1" class="table table-bordered" style="margin-top:20px">

        <thead>

            <tr>

                <th>ID</th>

                <th>ÜRÜN</th>

                <th>CARİ</th>

                <th>PERSONEL</th>

                <th>ADET</th>

                <th>FİYAT</th>

                <th>TOPLAM</th>

                <th>TARİH</th>

                <th>GÜNCELLE</th>

                <th>DETAYLAR</th>

            </tr>

        </thead>

        @foreach (var k in Model)

        {

            <tr>

                <td>@k.SaleId</td>

                <td>@k.Product.ProductName</td>

                <td>@k.Current.CurrentName @k.Current.CurrentSurname</td>

                <td>@k.Personel.PersonelName @k.Personel.PersonelSurname</td>

                <td>@k.Piece</td>

                <td>@k.Price</td>

                <td>@k.TotalPrice</td>

                <td>@k.Date</td>
            </tr>
        }

    </table>



    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

    <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />

    <link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>

    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

    <script>

        $('#tbl1').dataTable({});

    </script>

</body>
</html>
