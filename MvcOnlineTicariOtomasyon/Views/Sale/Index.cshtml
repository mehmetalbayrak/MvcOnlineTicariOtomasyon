@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<SaleSituation>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Ürün Listesi</h2>

<table id="tbl1" class=" table table-bordered">
    <thead>
    <tr>
        <th>ID</th>
        <th>ÜRÜN</th>
        <th>CARİ</th>
        <th>PERSONEL</th>
        <th>ADET</th>
        <th>FİYAT</th>
        <th>TOPLAM</th>
        <th>TARİH</th>
        <th>GÜNCELLE</th>
        <th>DETAYLAR</th>
    </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.SaleId
            </td>
            <td>
                @item.Product.ProductName
            </td>
            <td>
                @item.Current.CurrentName @item.Current.CurrentSurname
            </td>
            <td>
                @item.Personel.PersonelName @item.Personel.PersonelSurname
            </td>
            <td>
                @item.Piece
            </td>
            <td>
                @item.Price
            </td>
            <td>
                @item.TotalPrice
            </td>
            <td>
                @item.Date
            </td>
            <td>
                <a href="/Sale/GetSale/@item.SaleId" class="btn btn-success">Güncelle</a>
            </td>
            <td>
                <a href="/Sale/SaleDetail/@item.SaleId" class="btn btn-secondary">Detaylar</a>
            </td>
        </tr>
    }

</table>
<a href="/Sale/AddSale" class="btn btn-primary">Yeni Satış Yap</a>

