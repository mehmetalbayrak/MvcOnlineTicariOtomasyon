                        </div>
                        <!-- /.card -->
                        <br />
                        @Html.Action("Partial1", "Statistic")

                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Müşteri Şehir Tablosu</h3>

                                <div class="card-tools">
                                    <ul class="pagination pagination-sm float-right">
                                        <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
                                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                                        <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
                                    </ul>
                                </div>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body p-0">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Şehir</th>
                                            <th>Progress Bar</th>
                                            <th style="width: 40px">Adet</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{int queno = 0;}
                                        @foreach (var x in Model)
                                        {
                                            <tr>
                                                <td>@{queno++;} @queno</td>
                                                <td>@x.Province</td>
                                                <td>
                                                    @if (x.Number == 1)
                                                    {
                                                        <div class="progress progress-xs">
                                                            <div class="progress-bar bg-warning" style="width: 10%"></div>
                                                        </div>
                                                    }
                                                    @if (x.Number == 2)
                                                    {
                                                        <div class="progress progress-xs">
                                                            <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                                                        </div>
                                                    }
                                                    @if (x.Number >= 3)
                                                    {
                                                        <div class="progress progress-xs progress-striped active">
                                                            <div class="progress-bar bg-success" style="width: 90%"></div>
                                                        </div>
                                                    }

                                                </td>
                                                <td>
                                                    @if (x.Number == 1)
                                                    {
                                                        <span class="badge bg-danger">%@x.Number</span>
                                                    }
                                                    @if (x.Number == 2)
                                                    {
                                                        <span class="badge bg-primary">%@x.Number</span>
                                                    }
                                                    @if (x.Number == 3)
                                                    {
                                                        <span class="badge bg-success">%@x.Number</span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->

                        @Html.Action("Partial4", "Statistic")
